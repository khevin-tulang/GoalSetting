@{
    ViewData["Title"] = "ZOZOTOWN BACK OFFICE";
}
@model MSSQLCRUD.Models.UserInfoModel

<form id="formLogin" action="/index" method="POST">
    <div class="form-group">
        <div style="color:white;">
            Login Portal
        </div>
        <br />
        @Html.TextBoxFor(m => m.UserID, new
        {
            @class = "form_site_input",
            @placeholder = "username",
            @autofocus = "autofocus",
            @spellcheck = false,
            @maxlength = 20,
            @minlength = 2,
            @required = true
        })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.UserPass, new
        {
            @class = "form_site_input",
            @placeholder = "password",
            @minlength = 4,
            @required = true
        })
    </div>
    <div class="field-validation-error">
        @ViewBag.msg
    </div>
    <center>
        <button class="form_site_btn" type="submit">LOGIN</button>
    </center>
</form>