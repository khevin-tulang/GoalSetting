@{
    ViewData["Title"] = "ZOZOTOWN BACK OFFICE - ";
}
@model MSSQLCRUD.Models.UserListsModel
<style>
    table {
        width: 100%;
    }
    tbody > tr:nth-child(2n+1) {
        background: #444444;
    }
    td {
        padding: 5px;
    }
    input {
        color: black;
    }
    form {
        color: white;
        margin-top: 50px !important;
    }
    body {
        color: white;
    }
    a {
        color: white;
    }
    a:hover {
        color: #9cd4ff;
    }
</style>
<div style="border: 1px solid yellow; min-width: 1140px; min-height: 80vh;">
    <div style="border: 1px solid white; padding: 10px 15px; width: 25%; float: left; min-height: 80vh;">
        <div style="font-size:smaller;">@Session["eid"]</div>
        <div style=" border-bottom: 1px solid white;
                     font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                     font-weight: bold;
                     font-size: 20px;
                     display:inline;">
            @Session["fname"]
        </div>
        <div>
            @Session["lname"]
        </div>
        <div style="padding-top: 30px;">
            <a href="/index">> Home</a> <br />
            <a href="/profile?employeeid=@Session["eid"]">> View Profile</a> <br />
            <a href="/register">> Register New Employee</a> <br />
            <a href="/logout">> Logout</a> <br />
        </div>
    </div>
    <div style="display:block; border: 1px solid white; padding: 10px 15px; float: left; width: 75%; min-height: 80vh;">
        <h3>Account Lists  <img class="cody-icon" src="~/Images/list-ingredients-xxl.png" draggable="false" /> </h3>
        <div style="padding: 10px 15px;">
            <div style="padding: 10px; border: 1px solid grey;">
                <table>
                    <thead>
                        <tr>
                            <td>
                                ID
                            </td>
                            <td>
                                Full Name
                            </td>
                            <td>
                                Registered Date
                            </td>
                            <td colspan="2">
                                <center>Action</center>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var info in Model.Lists)
                        {
                            <tr>
                                <td>
                                    @info.employeeID
                                </td>
                                <td>
                                     @info.fullname
                                </td>
                                <td>
                                     @info.registrationDate
                                </td>
                                <td>
                                    <u><a href="/profile?employeeid=@info.employeeID">View</a></u>
                                </td>
                                <td>
                                    <u><a href="/delete?employeeid=@info.employeeID">Delete</a></u>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

